# Debug Configuration for nuqtaplus Backend
# نظام التصحيح لـ nuqtaplus Backend
#
# Copy relevant settings to your .env file to enable debugging
# انسخ الإعدادات المناسبة إلى ملف .env لتفعيل التصحيح

# ===== GENERAL DEBUG SETTINGS =====

# Enable full debug mode (enables all debug features)
# تفعيل وضع التصحيح الكامل
DEBUG_MODE=false

# Log level: trace, debug, info, warn, error, fatal
# مستوى السجلات
LOG_LEVEL=debug

# ===== REQUEST/RESPONSE DEBUGGING =====

# Log all HTTP requests and responses
# تسجيل جميع طلبات HTTP والاستجابات
DEBUG_REQUESTS=true

# Log request/response bodies (POST/PUT/PATCH)
# تسجيل محتوى الطلبات والاستجابات
DEBUG_BODIES=true

# Log request headers
# تسجيل رؤوس الطلبات
DEBUG_HEADERS=true

# ===== DATABASE DEBUGGING =====

# Log all database queries with execution time
# تسجيل جميع استعلامات قاعدة البيانات مع وقت التنفيذ
DEBUG_SQL=true

# ===== EXISTING SETTINGS (keep these from your .env) =====

# Server
PORT=3050
HOST=127.0.0.1
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_MAX=1000000
RATE_LIMIT_TIMEWINDOW=900000

# ===== NOTES =====
# - Don't commit this file with real secrets
# - Use DEBUG_MODE=false in production
# - Individual debug flags can be toggled independently
# - Logs are automatically formatted with colors in development
# - Set LOG_LEVEL=error in production for minimal logging

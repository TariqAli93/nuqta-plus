{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "checkJs": false, // لا تفحص JS بشدة
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "bin", "drizzle", "data"]
}

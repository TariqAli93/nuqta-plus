{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@main/*": ["./electron/main/*"],
      "@preload/*": ["./electron/preload/*"]
    },
    "checkJs": false, // لا تفحص JS بشدة
    "jsx": "preserve"
  },
  "include": ["src/**/*", "electron/main/**/*", "electron/preload/**/*"],
  "exclude": ["node_modules", "dist", "out", ".electron-vite"]
}
